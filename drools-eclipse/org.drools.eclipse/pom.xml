                <delete>
                  <fileset dir="lib" includes="**/*.jar" excludes="**/.svn" />                 
                </delete>
                <delete dir="help/shared" />     
                <delete dir="help/eclipse" />     
             </tasks>
           </configuration>
           <goals>
             <goal>run</goal>
           </goals>
         </execution>    
         
